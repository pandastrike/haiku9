DNS:
  Type: AWS::Route53::RecordSetGroup
  Properties:
    Comment: S3 website endpoint - deployed by Haiku9
    HostedZoneId: {{hostedZoneID}}
    RecordSets:
      {{each records}}
      - Name: {{name}}
        Type: A
        AliasTarget:
          DNSName: {{alias.hostname}}
          EvaluateTargetHealth: false
          HostedZoneId: {{alias.hostedZoneID}}
      {{/each}}
